<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h2>User info</h2>
  <% if @user.errors.any? %>
    <h2><%= @user.errors.count %>errors prohibited this book from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
    </ul>
  <% end %>
  <%= form_with model: @user do |f| %>
  <div class="form-group">
    <label for="user_name">Name</label>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>
  </div>
  <div class="form-group">
    <label for="user_image">Image</label>
    <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>
  </div>
  <div class="form-group">
    <label for="user_introduction">Introduction</label>
    <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"introduction"%>
  </div>
  <div class="btn btn-secondary" input type="submit" name="commit" value="Update User" data-disable-with="Update User" >
  <%= f.submit %>
  </div>
  <%end%>
</div>