<div class="container">
  <div class="row">
    <div class="col-md-3">

    <% if @book.errors.any? %>
      <h2><%= @book.errors.count %>prohibited this obj from being saved:</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>

      <h3>User info</h3>
      <%= image_tag @user.get_profile_image(100,100) %>
      <% if user_signed_in? %>
        <h3>name:<%= @user.name %></h3>
        <h3>introduction:<%= @user.introduction %></h3>
      <% end %>
      <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
      <h2 class = "mt-3">New book</h2>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <h4>Title</h4>
          <%= f.text_field :title, class:"form-control" %>
        </div>
        <div class="form-group">
          <h4>Body</h4>
          <%= f.text_area :body, class:"form-control", rows:"3"%>
        </div>
        <%= f.submit 'Create Book', class:"btn btn-lg btn-block btn-success mt-4" %>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <div class="container">
        <h1>Books</h1>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user) do %>
                <%= image_tag book.user.get_profile_image(100,100) %>
                <% end %>
              </td>
              <td><%= link_to(book.title, book_path(book.id), class:"text-blue") %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>